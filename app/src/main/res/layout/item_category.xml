<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_item"
    android:layout_marginBottom="8dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_icon_category"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />
    
    <TextView
        android:id="@+id/tv_category_name"
        android:layout_width="0dp"
        android:layout_height="32dp"
        app:layout_constraintTop_toTopOf="@+id/iv_icon_category"
        app:layout_constraintBottom_toBottomOf="@+id/iv_icon_category"
        app:layout_constraintStart_toEndOf="@+id/iv_icon_category"
        app:layout_constraintEnd_toStartOf="@+id/ib_icon_next"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        tools:text="category_name"
        android:gravity="center_vertical"/>

    <ImageButton
        android:id="@+id/ib_icon_next"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintTop_toTopOf="@id/tv_category_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_baseline_navigate_next_24"
        android:background="?android:attr/selectableItemBackgroundBorderless" />


</androidx.constraintlayout.widget.ConstraintLayout>