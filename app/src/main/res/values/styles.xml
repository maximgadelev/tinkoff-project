<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemTextColor">@color/black</item>
        <item name="itemBackground">@color/white</item>
        <item name="itemIconTint">@drawable/item_selector</item>
    </style>

    <style name="SmallIconSize">
        <item name="android:layout_height">@dimen/small_picture</item>
        <item name="android:layout_width">@dimen/small_picture</item>
    </style>

    <style name="NormalIconSize">
        <item name="android:layout_height">@dimen/normal_picture</item>
        <item name="android:layout_width">@dimen/normal_picture</item>
    </style>

    <style name="LargeIconSize">
        <item name="android:layout_height">@dimen/large_picture</item>
        <item name="android:layout_width">@dimen/large_picture</item>
    </style>

    <style name="TextStyleMedium" parent="TextAppearance.AppCompat">
        <item name="fontFamily">sans-serif-black</item>
    </style>

    <style name="TextStyleMedium.HugeTextBlack">
        <item name="android:textSize">@dimen/text_huge</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyleMedium.LargeTextBlack">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyleMedium.LargeTextGrey">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/normal_grey</item>
    </style>

    <style name="TextStyleMedium.LargeTextOrange">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/deep_orange</item>
    </style>

    <style name="TextStyleMedium.SmallTextBlack">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyleMedium.SmallTextGrey">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/normal_grey</item>
    </style>

    <style name="TextStyleRegular" parent="TextAppearance.AppCompat">
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="TextStyleRegular.SmallTextBlack">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyleRegular.SmallTextGrey">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/normal_grey</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/corner_radius_normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="textAllCaps">false</item>
        <item name="elevation">@dimen/elevation_size</item>
        <item name="android:translationZ">@dimen/elevation_size</item>
    </style>

    <style name="ButtonStyle.ButtonAdditional">
        <item name="backgroundTint">@color/light_grey</item>
    </style>

    <style name="ButtonStyle.ButtonMain">
        <item name="backgroundTint">@color/deep_yellow</item>
    </style>

    <style name="TabTextApperance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="MyRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/normal_grey</item>
        <item name="colorControlActivated">@color/deep_orange</item>
    </style>
</resources>
